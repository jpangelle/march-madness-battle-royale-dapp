{
  "name": "battle-royale-contracts",
  "scripts": {
    "deploy-verify": "npm run deploy && sleep 20 && npm run verify",
    "deploy": "hardhat run scripts/deploy.ts | tee temp_address.txt",
    "verify": "hardhat verify $(tail -c 43 temp_address.txt) && rm temp_address.txt",
    "test": "hardhat test --network hardhat",
    "coverage": "hardhat coverage --testfiles \"./test/*.ts\" --network hardhat"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "hardhat": "^2.12.2",
    "solidity-coverage": "^0.8.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "dotenv": "^16.0.3"
  }
}
